{% extends '::backend.html.twig' %}

{% block body %}
<div class="unit-80">
    <div class="table-container">
        <table class="table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Investigador</th>
                    <th>Proyecto</th>
                    <th>Fechacreacion</th>
                    <th>Actualizar</th>
                    <th>Consultar</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('investigadorproyecto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>
                        {{ entity.investigadores.nombre  ~ " " ~  entity.investigadores.apellidoPaterno ~ " " ~  entity.investigadores.apellidoMaterno }}
                    </td>
                    <td>{{ entity.proyectos.nombreCompleto }}</td>
                    <td>{% if entity.fechaCreacion %}{{ entity.fechaCreacion|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('investigadorproyecto_edit', { 'id': entity.id }) }}" >
                            <center><img src="{{ asset('bundles/backend/img/cog.png') }}" alt="" /></center>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('investigadorproyecto_show', { 'id': entity.id }) }}" >
                            <center><img src="{{ asset('bundles/backend/img/search.png') }}" alt="" /></center>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('investigadorproyecto_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}
