{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}">Inicio</a></li>
    <li><span>Investigadores</span></li>
{% endblock %}

{% block body %}
<div class="unit-100">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Apellidopaterno</th>
                    <th>Apellidomaterno</th>
                    <th>Correo electrónico</th>
                    <th>Teléfono</th>
                    <th>Grado</th>
                    <th>Sni</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="width-20 enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.nombre }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.apellidoPaterno }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.apellidoMaterno }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.email }}
                        </a>
                    </td>
                    <td class="width-20 enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.telefono }}
                        </a>
                    </td>
                    <td class="enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.grado }}
                        </a>
                    </td>
                    <td class="enlace">
                        <a href="{{ path('investigadores_edit', { 'id': entity.id }) }}" >
                            {{ entity.sni }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('investigadores_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}