{% extends '::backend.html.twig' %}

{% block body %}
    <h3>Investigadores</h3>

<div class="table-container">
    <table class="width-100 table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidopaterno</th>
                <th>Apellidomaterno</th>
                <th>Email</th>
                <th>Telefono</th>
                <th>Grado</th>
                <th>Sni</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('investigadores_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.apellidoPaterno }}</td>
                <td>{{ entity.apellidoMaterno }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.grado }}</td>
                <td>{{ entity.sni }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}