{% extends '::backend.html.twig' %}

{% block body %}
<h3>Líneas de investigación</h3>

<div class="table-container">
    <table class="width-60 table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clave</th>
                <th>Nombre</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lineas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.clave }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block lateral %}
    <ul>
        <li><a href="{{ path('investigadoreslineas') }}">Investigadores-Lineas</a></li>
    </ul>
{% endblock %}
