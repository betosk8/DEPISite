{% extends '::backend.html.twig' %}

{% block body %}
<div class="unit-80">
    <h3>Líneas de investigación</h3>

    <table class="pure-table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Clave</th>
                <td>{{ entity.clave }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ entity.descripcion }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('lineas') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('lineas_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
</div>
{% endblock %}

{% block lateral %}
<aside class="unit-20">
    <h5>Enlaces</h5>
    <nav class="nav-v nav-stats">
        <ul>
            <li><a href="{{ path('investigadoreslineas') }}">Investigadores-Lineas</a></li>
        </ul>
    </nav>
</aside>
{% endblock %}

