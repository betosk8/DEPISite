{% extends '::backend.html.twig' %}

{% block body %}
<div class="unit-80">
    <h3>√Åreas</h3>

    <div class="table-container">
        <table class="width-60 table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="width-30">Nombre</th>
                    <th>Descripcion</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('areas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.descripcion }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}

{% block lateral %}
<aside class="unit-20">
    <h5>Enlaces</h5>
    <nav class="nav-v nav-stats">
        <ul>
            <li><a href="{{ path('areasproyectos') }}">Areas-Proyectos</a></li>
        </ul>
    </nav>
</aside>
{% endblock %}