{% extends '::backend.html.twig' %}

{% block body -%}
    <h3>√Åreas</h3>

<div class="table-container">
    <table class="width-100 table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('areas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripcion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block lateral %}
    <ul>
        <li><a href="{{ path('areasproyectos') }}">Areas y Proyectos</a></li>
    </ul>
{% endblock %}