{% extends '::backend.html.twig' %}

{% block mapa %}
    <li><a href="{{ path('posgradmin') }}" >Inicio</a></li>
    <li><span>Alumnos</span></li>
{% endblock %}

{% block body %}
<div class="unit-100">
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>No. de control</th>
                    <th>Nombre</th>
                    <th>Apellido Paterno</th>
                    <th>Apellido Materno</th>
                    <th>Actualizar</th>
                    <th>Consultar</th>
                </tr>
            </thead>
            <tbody>
            {% for alumno in alumnos %}
                <tr>
                    <td>{{ alumno.noControl }}</td>
                    <td>{{ alumno.nombre }}</td>
                    <td>{{ alumno.apellidoPaterno }}</td>
                    <td>{{ alumno.apellidoMaterno }}</td>
                    <td>
                        <a href="{{ path('alumnos_edit', { 'id': alumno.id }) }}" >
                            <center><img src="{{ asset('bundles/backend/img/cog.png') }}" alt="" /></center>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('alumnos_show', { 'id': alumno.id }) }}" >
                            <center><img src="{{ asset('bundles/backend/img/search.png') }}" alt="" /></center>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('alumnos_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}

