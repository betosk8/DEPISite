{% extends '::backend.html.twig' %}



{% block body %}
    <h3>Proyectos</h3>

<div class="table-container">
    <table class="width-100 table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clave_itm</th>
                <th>Clave_conacyt</th>
                <th>Clave_dgest</th>
                <th>Nombre_corto</th>
                <th>Nombre_completo</th>
                <th>Fecha_apertura</th>
                <th>Fecha_termino</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proyectos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.claveitm }}</td>
                <td>{{ entity.claveconacyt }}</td>
                <td>{{ entity.clavedgest }}</td>
                <td>{{ entity.nombrecorto }}</td>
                <td>{{ entity.nombrecompleto }}</td>
                <td>{% if entity.fechaapertura %}{{ entity.fechaapertura|date('Y-m-d') }}{% endif %}</td>
                <td>{% if entity.fechatermino %}{{ entity.fechatermino|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

{% block lateral %}
    <ul>
        <li><a href="{{ path('alumnosproyectos') }}">Alumnos y Proyectos</a></li>
        <li><a href="{{ path('areasproyectos') }}">Areas y Proyectos</a></li>
    </ul>
{% endblock %}
