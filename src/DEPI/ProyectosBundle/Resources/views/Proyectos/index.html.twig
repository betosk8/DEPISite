{% extends '::backend.html.twig' %}



{% block body %}
    <h3>Proyectos</h3>

    <table class="pure-table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Clave_itm</th>
                <th>Clave_conacyt</th>
                <th>Clave_dgest</th>
                <th>Nombre_corto</th>
                <th>Nombre_completo</th>
                <th>Descripcion</th>
                <th>Fecha_apertura</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proyectos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.claveitm }}</td>
                <td>{{ entity.claveconacyt }}</td>
                <td>{{ entity.clavedgest }}</td>
                <td>{{ entity.nombrecorto }}</td>
                <td>{{ entity.nombrecompleto }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{% if entity.fechaapertura %}{{ entity.fechaapertura|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.status }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
