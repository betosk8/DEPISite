{% extends '::backend.html.twig' %}

{% block body %}
<div class="unit-80">
    <h3>Proyectos list</h3>
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="width-30">Nombrecompleto</th>
                    <th class="width-30">Objetivogeneral</th>
                    <th>Fecha de apertura</th>
                    <th>Actualizar</th>
                    <th>Consultar</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('proyectos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.nombreCompleto }}</td>
                    <td>{{ entity.objetivoGeneral }}</td>
                    <td>{% if entity.fechaApertura %}{{ entity.fechaApertura|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <a href="{{ path('proyectos_edit', { 'id': entity.id }) }}">
                            <center><img src="{{ asset('bundles/backend/img/cog.png') }}" alt="" /></center>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('proyectos_show', { 'id': entity.id }) }}">
                            <center><img src="{{ asset('bundles/backend/img/search.png') }}" alt="" /></center>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('proyectos_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}

{% block lateral %}
<aside class="unit-20">
    <h5>Enlaces</h5>
    <nav class="nav-v nav-stats">
        <ul>
            <li><a href="{{ path('areasproyectos') }}">Areas-Proyectos</a></li>
            <li><a href="{{ path('proyectosproductos') }}">ProductosAcademicos-Proyectos</a></li>
            <li><a href="{{ path('alumnosproyectos') }}">Alumnos-Proyectos</a></li>
        </ul>
    </nav>
</aside>
{% endblock %}
