{% block body %}
<h3> Proyectos de Investigaci√≥n </h3>



{% for entity in entities %}

    {% if loop.first %}
        <!-- Using only the large-block-grid -->
        <ul class="large-block-grid-6">
    {% endif %}    

    <lu>
    <div>
	<div class="small-6 small-centered large-uncentered columns">
        	<p><a href="#" data-reveal-id="modal{{ entity.id }}"> 
        		{{ entity.nombreCompleto}} 
        	</a></p>
	</div>
        <div id="modal{{ entity.id }}" class="reveal-modal normal">
          <div class="large-4 columns">
                <h3 class="lead">{{ "Nombre:"}}</h3>
           </div>  
