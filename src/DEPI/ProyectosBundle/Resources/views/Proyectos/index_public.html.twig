                <p class="lead" style="background-color:#F8F8F8">{{ entity.ClaveConacyt }}</p>
            </div>
	  <div class="large-4 columns">
                <p class="lead">{{ "Clave Dgest:"}}</p>
           </div>  
	   <div class="large-8 columns">
                <p class="lead">{{ entity.claveDgest }}</p>
            </div>
	  <div class="large-4 columns">
                <p class="lead" style="background-color:#F8F8F8">{{ "Clave ITM:"}}</p>
           </div>  
	   <div class="large-8 columns">
                <p class="lead" style="background-color:#F8F8F8">{{ entity.claveItm }}</p>
            </div>
	   <div class="large-4 columns">
                <p class="lead">Objetivo General:</p>
           </div>  
	   <div class="large-8 columns">
                <p class="lead">{{ entity.objetivoGeneral }}</p>
            </div>

	  <div class="large-4 columns">
                <p class="lead" style="background-color:#F8F8F8">Objetivo Especifico:</p>
           </div>  
	   <div class="large-8 columns">
                <p class="lead" style="background-color:#F8F8F8">{{ entity.objetivosEspecificos }}</p>
            </div>

	  <a class="close-reveal-modal">&#215;</a>      
        </div>
    </div>
    </lu>


    {% if loop.index is divisible by(6) %}
    </ul>
    <ul class="large-block-grid-9">
    {% endif %}  

{% endfor %}
</ul>

{% endblock %}

