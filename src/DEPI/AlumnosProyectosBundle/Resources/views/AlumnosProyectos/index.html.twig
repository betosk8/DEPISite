{% extends '::backend.html.twig' %}

{% block body %}
<div class="unit-80">
    <h3>Alumnos Proyectos list</h3>
    <div class="table-container">
        <table class="width-100 table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th class="width-20">No Control</th>
                    <th class="width-40">Alumno</th>
                    <th class="width-40">Proyecto</th>
                    <th>Actualizar</th>
                    <th>Consultar</th>
                </tr>
            </thead>
            <tbody>

            {% for entity in alumnosenproyectos %}
                <tr>
                    <td><a href="{{ path('alumnosproyectos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.idAlumno.noControl }}</td>
                    <td>{{ entity.idAlumno.nombre ~ " " ~ entity.idAlumno.apellidoPaterno  ~ " " ~ entity.idAlumno.apellidoMaterno }}</td>
                    <td>{{ entity.idProyecto.nombreCorto }}</td>
                    <td>
                        <a href="{{ path('alumnosproyectos_edit', { 'id': entity.id }) }}">
                            <center><img src="{{ asset('bundles/backend/img/cog.png') }}" alt="" /></center>
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('alumnosproyectos_show', { 'id': entity.id }) }}">
                            <center><img src="{{ asset('bundles/backend/img/search.png') }}" alt="" /></center>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('alumnosproyectos_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}