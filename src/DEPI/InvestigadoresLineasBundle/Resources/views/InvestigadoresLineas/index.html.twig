            <thead>
                <tr>
                    <th>Id</th>
                    <th>Rol</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('investigadoreslineas_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.rol }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('investigadoreslineas_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('investigadoreslineas_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<a href="{{ path('investigadoreslineas_new') }}" class="btn btn-blue">Nuevo</a>
{% endblock %}