<!DOCTYPE html>
<html>
    <head>
        <title>{% block title %}Portada!{% endblock %}</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" />
        <link rel="stylesheet" href="{{ asset('bundles/portada/css/foundation.css') }}">
        <script src="{{ asset('bundles/portada/js/vendor/custom.modernizr.js') }}"></script>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>        
        <!-- Grid Example -->
        <div class="row">
            <div class="large-12 columns">
                <div class="panel">
                    <p>12</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-8 push-4 columns">
                <div class="panel">
                    <nav class="top-bar">
                      <section class="top-bar-section">
                        <!-- Left Nav Section -->
                        <ul class="left">
                          <li class="divider"></li>
                          <li class="has-dropdown"><a href="#">Catálogos</a>
                            <ul class="dropdown">
                              <li><a href="{{ path('alumnos') }}">Alumnos</a></li>
                              <li><a href="{{ path('areas') }}">Áreas</a></li>
                              <li><a href="{{ path('investigadores') }}">Investigadores</a></li>
                              <li><a href="{{ path('lineas') }}">Líneas de investigación</a></li>
                              <li><a href="{{ path('proyectos') }}">Proyectos</a></li>
                            </ul>
                          </li>
                          <li class="divider"></li>
                        </ul>
                      </section>
                    </nav>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <div class="panel">
                  {% block body %}
                  {% endblock %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="large-12 columns">
                <div class="panel">
                    <p>12</p>
                </div>
            </div>
        </div>
        <script src="{{ asset('bundles/portada/js/vendor/zepto.js') }}"></script>
        <script src="{{ asset('bundles/portada/js/vendor/jquery.js') }}"></script>
        <script src="{{ asset('bundles/portada/js/foundation.min.js') }}"></script>
        <script src="{{ asset('bundles/portada/js/foundation/foundation.topbar.js') }}"></script>
        <script>
            $(document).foundation();
        </script>
    </body>
</html>